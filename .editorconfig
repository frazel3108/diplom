root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
indent_size = 2
insert_final_newline = true

[*.php]
indent_size = 4
insert_final_newline = false

[*.blade.php]
indent_size = 2
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[{*.js, *.css, *.scss, *.sass, *.vue}]
indent_size = 2
insert_final_newline = true
